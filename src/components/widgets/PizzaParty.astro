---
export interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  videoSrc?: string;
  date?: string;
  location?: string;
  id?: string;
}

const {
  title = 'Global Pizza Party 2025',
  subtitle = 'Held the first ever Pizza Party event in Kisumu',
  description = 'Bringing together the local Web3 community for networking and collaboration in a fun, engaging environment.',
  videoSrc = '~/assets/images/Global _Pizza_ Party 2025.mp4',
  date = '2025',
  location = 'Kisumu, Kenya',
  id,
} = Astro.props;
---

<section class="py-16 md:py-20" {...id ? { id } : {}}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="text-center pb-10 md:pb-16">
      <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">
        {title}
      </h2>
      <p class="text-xl text-muted mb-6 dark:text-slate-300 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Video Section -->
      <div class="order-2 lg:order-1">
        <div class="relative rounded-lg overflow-hidden shadow-2xl">
          <video
            class="w-full h-auto"
            controls
            poster="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
          >
            <source src={videoSrc} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
      </div>
      
      <!-- Content Section -->
      <div class="order-1 lg:order-2">
        <div class="space-y-6">
          <div class="flex items-center space-x-4 text-sm text-muted dark:text-slate-400">
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              {date}
            </span>
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              {location}
            </span>
          </div>
          
          <p class="text-lg text-gray-600 dark:text-slate-300 leading-relaxed">
            {description}
          </p>
          
          <div class="bg-gradient-to-r from-blue-50 to-emerald-50 dark:from-slate-800 dark:to-slate-700 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              What Made This Event Special?
            </h3>
            <ul class="space-y-2 text-sm text-gray-600 dark:text-slate-300">
              <li class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                First-ever Pizza Party event in Kisumu
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Community networking and collaboration
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Fun and engaging Web3 learning environment
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>